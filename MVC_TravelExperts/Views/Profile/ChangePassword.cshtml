@model TravelExpertsData.Models.Customer

@{
    ViewData["Title"] = "Change Password";
}
<div class="container">
    <h1 id="PageTitle">Change Your Password</h1>

    <hr />
        <div class="col">
            <form asp-action="ChangePassword" method="post">
                <div class="form-group form-group form-inline">
                    <label asp-for="CustPassword" class="control-label col-md-2 justify-content-start"></label>
                    <input asp-for="CustPassword" class="form-control col-md-4" type="password" />
                    <span asp-validation-for="CustPassword" class="text-danger col-md-6"></span>
                </div>
                <div class="form-group form-group form-inline">
                    <label asp-for="ConfirmPassword" class="control-label col-md-2 justify-content-start"></label>
                    <input asp-for="ConfirmPassword" class="form-control col-md-4" type="password" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger col-md-6"></span>
                </div>
                <div class="form-group form-group form-inline">
                    <input type="submit" value="Apply Changes" class="btn btn-primary px-4 mt-4" />
                </div>
                <input type="hidden" asp-for="@Model.CustomerId" />
            </form>
        </div>
</div>