@model TravelExpertsData.Models.Customer

@{
    ViewData["Title"] = "Change Password";
}
<div class="container">
    <h1 class="offset-sm-2">Change Your Password</h1>

    <hr />
    <div class="row">
        <div class="col-sm-2">
            <div class="list-group">
                @foreach (String s in ViewBag.Filters)
                {
                    <a asp-controller="Profile" asp-action="Profile" asp-route-id="@s"
                       class="list-group-item list-group-item-action
                             @(ViewBag.SelectedFilter == s ? " active" : "" )">
                        @s
                    </a>
                }
            </div>
        </div>

        <div class="col-sm-10">
            <form asp-action="Update" method="post">
                <div class="form-group form-group form-inline">
                    <label asp-for="CustPassword" class="control-label col-md-2 justify-content-start"></label>
                    <input asp-for="CustPassword" class="form-control col-md-4" value="@Model.CustPassword" />
                    <span asp-validation-for="CustPassword" class="text-danger col-md-6"></span>
                </div>
                <div class="form-group form-group form-inline">
                    <label asp-for="ConfirmPassword" class="control-label col-md-2 justify-content-start"></label>
                    <input asp-for="ConfirmPassword" class="form-control col-md-4" value="@Model.ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger col-md-6"></span>
                </div>
                <div class="form-group form-group form-inline">
                    <input type="submit" value="Apply Changes" class="btn btn-primary ml-5 px-4 mt-4" />
                </div>
            </form>
        </div>
    </div>
</div>